#!/usr/bin/env bash
# Script that sets up an nginx web server on our server + redirection + 404.

apt update -y && apt upgrade -y
apt install nginx -y

# Index page
echo "Holberton School" >/var/www/html/index.nginx-debian.html

# Redirect to fabulous Rick Astley page
sed -i '/listen \[::\]:80 default_server;/a\        rewrite ^\/redirect_me https://www.youtube.com/watch?v=dQw4w9WgXcQ permanent;' /etc/nginx/sites-available/default

# 404 Page not Found
echo "Ceci n'est pas une page" >/var/www/html/custom_404.html
sudo sed -i '/6172-web-01;/a\        error_page 404 /custom_404.html;' /etc/nginx/sites-available/default

service nginx restart
